pipeline {
    agent { label 'LABEL2' }
    triggers { cron ('H/15 * * * *') }
    triggers { pollSCM ('H/30 * * * *') }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/msteja143/game-of-life.git',
                    branch: 'master'
            }
        }
        stage('package') {
            tools {
                jdk  'JDK-17'
            }
            steps {
                sh 'mvn package'
            }
        }
        stage('post build') {
            steps {
                archiveArtifacts artifacts: '**/target/gameoflife.war',
                                 onlyIfSuccessful: true
                junit testResults: '**/surefire-reports/TEST-*.xml'
            }
        }
    }
}